            "args": [
                "--target_format", "gltf"
                ],
            "cwd": "${workspaceFolder}/",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "DEBUG_LOGGGING": "1",
                "BLENDERKIT_SERVER": "https://www.blenderkit.com",
                "MAX_ASSET_COUNT": "3",
