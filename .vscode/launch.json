    "version": "0.2.0",
    "configurations": [




        {
            "name": "[RUFF] Check All",
            "type": "debugpy",
            "request": "launch",
            "python": "${workspaceFolder}/.venv/Scripts/python.exe",
            "module": "ruff",
            "args": [
                "check",
                "--exclude", "scripts,tests,_debug,_bck,*.tmp,__pycache__,build,.venv,*.pyi,pic_lib.py",
                ".",
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "[RUFF] Fix All",
            "type": "debugpy",
            "request": "launch",
            "python": "${workspaceFolder}/.venv/Scripts/python.exe",
            "module": "ruff",
            "args": ["check", "--fix",
                "--include", "*.py",
                "--exclude", "scripts,tests,_debug,_bck,*.tmp,__pycache__,build,.venv,*.pyi,pic_lib.py",
                ".",
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },

        {
            "name": "[BANDIT] Check All",
            "type": "debugpy",
            "request": "launch",
            "python": "${workspaceFolder}/.venv/Scripts/python.exe",
            "module": "bandit",
            "args": [
                "-c", "_bandit.yaml",
                "-ll",
                "-r", ".",
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },

        {
            "name": "[PYDOCS] Check All",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceFolder}/.venv/Scripts/pydoclint.exe",
            "args": [
                "--style", "google",
                "--arg-type-hints-in-docstring", "false",
                "--check-return-types", "false",
                "--ignore-private-args", "true",
                "--ignore-underscore-args", "true",
                "--exclude", "\\.venv|\\.ruff_cache|build|__pycache__|\\.vscode|\\.git|\\.github|tests|_debug|_bck|.*\\.tmp|.*\\.pyi|pic_lib\\.py",
                "."
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },

        {
            "name": "Run Project Setup",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceFolder}/.scripts/setup_project.bat",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "[TASK] Generate GLTFs for Godot",
            "type": "debugpy",
            "request": "launch",
            "python": "${workspaceFolder}/.venv/Scripts/python.exe",
            "program": "${workspaceFolder}/generate_gltf.py",
            "args": [
                "--target_format", "gltf_godot"
                ],
            "cwd": "${workspaceFolder}/",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "BLENDERKIT_SERVER": "https://www.blenderkit.com",
                "MAX_ASSET_COUNT": "3",
                "SKIP_UPDATE": "True",
                 // optional, for testing a specific asset "ASSET_BASE_ID"
            }
        },

        {
            "name": "[TASK] Generate GLTFs",
            "type": "debugpy",
            "request": "launch",
            "python": "${workspaceFolder}/.venv/Scripts/python.exe",
