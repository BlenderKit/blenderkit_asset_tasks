{
    "python.experiments.optInto": ["pythonTerminalEnvVarActivation"],
    "python.envFile": "${workspaceFolder}/.env",
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/Scripts/python.exe",

    "python.terminal.activateEnvironment": true,

    "terminal.integrated.env.windows": {
        "PATH": "${env:PATH};${workspaceFolder};;${workspaceFolder}/.venv/Scripts;${workspaceFolder}/.venv/Lib/site-packages;${workspaceFolder}/.tests;${workspaceFolder}/.tests/unittests",

        "PYTHONPATH": "${env:PYTHONPATH};${workspaceFolder};;${workspaceFolder}/.venv/Scripts;${workspaceFolder}/.venv/Lib/site-packages;${workspaceFolder}/.tests;${workspaceFolder}/.tests/unittests",
    },

    "python.autoComplete.extraPaths": [
        "${workspaceFolder}/.venv/Lib/site-packages",
        "${workspaceFolder}/",
        "${workspaceFolder}/.tests",
        "${workspaceFolder}/.tests/unittests",

        "D:/blender-4.5.2-windows-x64/4.5/scripts/modules",
    ],

    "python.analysis.extraPaths": [
        "${workspaceFolder}/.venv/Lib/site-packages",
        "${workspaceFolder}/",
        "${workspaceFolder}/.tests",
        "${workspaceFolder}/.tests/unittests",

        "D:/blender-4.5.2-windows-x64/4.5/scripts/modules",
    ],

    "python.testing.unittestArgs": [
        // "-v",
        "-s",
        "${workspaceFolder}/.tests/unittests/",
    ],

    "python.testing.unittestEnabled": true,
    "python.testing.pytestEnabled": false,

    "python.analysis.typeEvaluation.deprecateTypingAliases": true,
    "python.analysis.typeEvaluation.enableTypeIgnoreComments": true,
    "python.analysis.typeEvaluation.strictParameterNoneValue": true,

    "python.analysis.autoFormatStrings": true,


    "files.insertFinalNewline": true,

    "ruff.enable": true,
    "ruff.nativeServer": "auto",
    "ruff.path": ["${workspaceFolder}/.venv/Scripts/ruff.exe"],
    "ruff.interpreter": ["${workspaceFolder}/.venv/Scripts/python.exe"],
    "ruff.importStrategy": "fromEnvironment",
    "ruff.format.preview": true,
    "ruff.lineLength": 120,


    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        // "editor.defaultFormatter": "ms-python.black-formatter",

        "editor.formatOnSave": true,
        "editor.renderFinalNewline": "on"
    },

